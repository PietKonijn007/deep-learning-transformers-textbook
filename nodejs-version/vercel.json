{
  "version": 2,
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/",
      "destination": "/book-selector.html"
    }
  ],
  "headers": [
    {
      "source": "/(deeptech|leadership)-app.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ]
}
